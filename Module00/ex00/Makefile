# **************************************************************************** #
#								COLORS										   #
# **************************************************************************** #

RED				:= \033[0;31m
GREEN			:= \033[0;32m
YELLOW			:= \033[0;33m
BLUE			:= \033[0;34m
PURPLE			:= \033[0;35m
CYAN			:= \033[0;36m
ORANGE			:= \033[0;91m
MAGENT			:= \033[0;95m
RESET			:= \033[0m


# **************************************************************************** #
#								PATHS										   #
# **************************************************************************** #

SRC_DIR			:= ./src/
BUILD_DIR		:= ./build/
BIN_DIR			:= ./bin/
LIBS_DIR		:= ./libs/
HEADERS_DIR		:= ./headers/

GTEST_DIR		:= /usr/bin/googletest/
GTEST_LIB		:= /usr/lib/libgtest.a /usr/lib/libgtest_main.a

# **************************************************************************** #
#								FILES										   #
# **************************************************************************** #

NAME			:= $(BIN_DIR)megaphone

SRC_F			= $(wildcard $(SRC_DIR)*.cpp)

# **************************************************************************** #
#								COMMANDS									   #
# **************************************************************************** #

RM				:= rm -rf
MKDIR			:= mkdir -p
CP				:= cp -r
MV_OBJS			:= find . -type f \( -name '.o' -o -name '.a'\) -exec mv {} \

# **************************************************************************** #
#								COMPILATION									   #
# **************************************************************************** #

AUTHOR			:= umeneses
COMPILER		:= C++
FLAGS			:= -Wall -Wextra -Werror
LIMITATIONS		:= -std=c++98
DEBUG			:= -g3



# **************************************************************************** #
#								TARGETS										   #
# **************************************************************************** #

all:			$(NAME)

$(NAME):		$(OBJS) | $(BIN_DIR)
				@echo "$(GREEN)Compiling C++ Files:$(RESET)"
				@$(COMPILER) $(FLAGS) $(LIMITATIONS) $(DEBUG) $@ -o $^